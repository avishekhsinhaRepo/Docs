{
  "openapi": "3.0.3",
  "info": {
    "title": "TMDb Movie Search API",
    "version": "1.0.0",
    "description": "OpenAPI JSON for searching movies using TMDb API"
  },
  "servers": [
    {
      "url": "https://api.themoviedb.org/3"
    }
  ],
  "paths": {
    "/search/movie": {
      "get": {
        "summary": "Search movies by title",
        "description": "Search for movies using TMDb API",
        "parameters": [
          {
            "name": "api_key",
            "in": "query",
            "required": true,
            "schema": {"type": "string"},
            "description": "Your TMDb API key"
          },
          {
            "name": "query",
            "in": "query",
            "required": true,
            "schema": {"type": "string"},
            "description": "Movie name to search for"
          },
          {
            "name": "language",
            "in": "query",
            "required": false,
            "schema": {"type": "string"},
            "description": "Optional language code"
          },
          {
            "name": "page",
            "in": "query",
            "required": false,
            "schema": {"type": "integer"},
            "description": "Optional page number"
          },
          {
            "name": "include_adult",
            "in": "query",
            "required": false,
            "schema": {"type": "boolean"},
            "description": "Include adult content (optional)"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful movie search",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "page": {"type": "integer"},
                    "results": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {"type": "integer"},
                          "title": {"type": "string"},
                          "overview": {"type": "string"},
                          "release_date": {"type": "string"},
                          "vote_average": {"type": "number"}
                        }
                      }
                    },
                    "total_pages": {"type": "integer"},
                    "total_results": {"type": "integer"}
                  }
                }
              }
            }
          },
          "401": {"description": "Unauthorized â€“ Invalid API key"},
          "404": {"description": "Not Found"}
        }
      }
    }
  }
}
